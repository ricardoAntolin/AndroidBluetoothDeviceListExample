<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/llLoginFormContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="@dimen/login_input_container_margin"
        android:background="@drawable/rounded_corners_shape_bg"
        android:elevation="6dp"
        android:orientation="horizontal">

        <include layout="@layout/sign_in_form"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgAppIcon"
        android:layout_width="@dimen/login_logo_icon_size"
        android:layout_height="@dimen/login_logo_icon_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_logo_icon_top_margin"
        android:background="@drawable/rounded_corners_shape_bg"
        android:elevation="12dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <include
        layout="@layout/view_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>